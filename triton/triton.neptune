require 'config/config.triton.php';

function readlineTriton($prompt = null)
{
    if($prompt)
    {
        echo $prompt;
    }
    $fp = fopen('php://stdin','r');
    $line = rtrim(fgets($fp, 1024));
    return $line;
}
if($argv[1] == '--migration:create')

    $table = isset($argv[3]) ? $argv[3] : die('Table is null!');
    require $configs['databases'];
    require $configs['migrations'] . '/'. $database . '/' . $table;



}
else
{
    echo '"'. $argv[1] .'" isn\'t recognized.';
}